<h1>All Songs | <a href="/genres">All Genres</a></h1>
<% @songs.each do |song| %>
  <div>
  <form style="display:inline;" action="/songs/<%= song.song_id %>">
    <input type="submit" value="View">
  </form>
  <form style="display:inline;" action="/songs/<%= song.song_id %>/edit">
    <input type="submit" value="Edit">
  </form>
  <form style="display:inline;" action="/songs/<%= song.song_id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form> |
  <strong><%= song.song_name %></strong> by <em><%= song.artist %></em>
  <br>
  </div>
<% end %>



<br>
<br>

<div>
<a href="/songs/new">Add New Song</a>
</div>

<div>
<a href="/genres/new">Add New Genre</a>
</div>

<br>

