<h1>All Songs</h1>
<% @songs.each do |song| %>
  <div>
  <a href="/songs/<%= song.song_id %>">View Song</a> | 
  <b><%= song.song_name %></b> by <i><%= song.artist %></i>
  <br>
  </div>
<% end %>

<br>
<br>

<form>
  <h3>Search (DOES NOT WORK)</h3>
    <div>
      <label for="song_name">Song Name:</label>
      <input id="song_name" type="text" name="song_name">
    </div>

    <div>
      <label for="artist">Artist:</label>
      <input id="artist" type="text" name="artist">
    </div>

    <div>
      <label for="album">Album:</label>
      <input id="album" type="text" name="album">
    </div>  

    <div>
      <label for="genre">Genre:</label>
      <select name="genre">
        <option value="nil"></option>
        <option value="genre1">Electronic</option>
        <option value="genre2">Hip Hop</option>
        <option value="genre3">Pop</option>
        <option value="genre4">R and B</option>
        <option value="genre5">Rap</option>
        <option value="genre6">Rock</option>
      </select>
    </div> 

    <input type="submit">

</form>